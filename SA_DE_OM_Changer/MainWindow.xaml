<Window x:Class="SA_DE_OM_Changer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GTA Trilogy DE on_mission Changer"
        Width="500" Height="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#1e1e1e">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="460">
            <TextBlock x:Name="StatusText"
                       Text="Status: Waiting for game..."
                       FontSize="16"
                       Foreground="White"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="10,0,10,8"/>
            <TextBlock x:Name="ValueText"
                       Text="on_mission Value: â€”"
                       FontSize="18"
                       Foreground="LightGreen"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="10,0,10,10"/>
            <TextBlock x:Name="HotkeyText"
                       Text="Current Hotkey: F6"
                       FontSize="12"
                       Foreground="#888"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="10,0,10,20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add Version"
                        Click="AddVersion_Click"
                        Padding="12,6"
                        Margin="0,0,10,0"
                        FontSize="14"
                        Background="#333"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button Content="Change Hotkey"
                        Click="ChangeHotkey_Click"
                        Padding="12,6"
                        FontSize="14"
                        Background="#333"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
