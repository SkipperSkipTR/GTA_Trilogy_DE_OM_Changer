<Window x:Class="SA_DE_OM_Changer.HotkeyConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Hotkey" Height="337" Width="454"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1e1e1e">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Hotkey Configuration" 
                   Foreground="White" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1" 
                BorderBrush="#FF3F3F46" 
                BorderThickness="1" 
                CornerRadius="3"
                Padding="15"
                Margin="0,0,0,15"
                Background="#FF1E1E1E">
            <StackPanel>
                <TextBlock x:Name="CurrentHotkeyText" 
                           Text="Current: F6" 
                           Foreground="#FFB0B0B0" 
                           FontSize="12"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="InstructionText" 
                           Text="Press any key combination to set as the new hotkey..." 
                           Foreground="White" 
                           FontSize="13"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" 
                BorderBrush="#FF007ACC" 
                BorderThickness="2" 
                CornerRadius="5"
                Background="#FF252526"
                Margin="0,0,0,15">
            <TextBlock x:Name="PressedKeyText" 
                       Text="Waiting for key press..." 
                       Foreground="#FF808080" 
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Margin="20"/>
        </Border>

        <Border Grid.Row="3"
                BorderBrush="#FF3F3F46" 
                BorderThickness="1" 
                CornerRadius="3"
                Padding="10"
                Margin="0,0,0,15"
                Background="#FF1E1E1E">
            <TextBlock x:Name="NewHotkeyText" 
                       Text="" 
                       Foreground="White" 
                       FontSize="13"
                       TextAlignment="Center"/>
        </Border>

        <TextBlock Grid.Row="4" 
                   TextWrapping="Wrap" 
                   Foreground="#FF808080" 
                   FontSize="11"
                   Margin="0,0,0,15">
            <Run Text="Tip: You can use any key with Ctrl, Alt, or Shift modifiers."/>
            <LineBreak/>
            <Run Text="Examples: F6, Ctrl+F1, Alt+G, Shift+Numpad5"/>
        </TextBlock>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="100" Height="32" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="Cancel" Width="100" Height="32" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
